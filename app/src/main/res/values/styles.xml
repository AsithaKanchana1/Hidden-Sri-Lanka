<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- Styles for About Us Page -->
    <style name="AboutPage.TextView.Base" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">50dp</item>
        <item name="android:layout_marginEnd">50dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/NavyBlue</item>
    </style>

    <style name="AboutPage.TextView.Title" parent="AboutPage.TextView.Base">
        <item name="android:fontFamily">cursive</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">40dp</item>
    </style>

    <style name="AboutPage.TextView.Mission" parent="AboutPage.TextView.Base">
        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="AboutPage.TextView.Paragraph" parent="AboutPage.TextView.Base">
        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_marginBottom">40dp</item>
    </style>

    <style name="AboutPage.Button.Link" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginEnd">40dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textColor">@color/Blue2</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>